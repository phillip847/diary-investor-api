{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/auth/admin/login",
      "destination": "/api/auth.js"
    },
    {
      "source": "/api/admin/stats",
      "destination": "/api/admin.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/newsletter/(.*)",
      "destination": "/api/index.js"
    }
  ]
}