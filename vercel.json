{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/auth/admin/login",
      "destination": "/api/auth.js"
    },
    {
      "source": "/api/admin/stats",
      "destination": "/api/admin.js"
    },
    {
      "source": "/api/admin/articles",
      "destination": "/api/admin/articles.js"
    },
    {
      "source": "/api/admin/pages/:page",
      "destination": "/api/admin/pages.js"
    },
    {
      "source": "/api/articles/:slug",
      "destination": "/api/articles/[slug].js"
    },
    {
      "source": "/api/sessions/:id",
      "destination": "/api/sessions/[id].js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/newsletter/(.*)",
      "destination": "/api/index.js"
    }
  ]
}